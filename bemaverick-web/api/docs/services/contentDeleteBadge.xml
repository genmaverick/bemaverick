<?xml version="1.0" encoding="utf-8"?>
<docs>
    <name>Content Delete Badge</name>
    <description>Delete a badge for a content by the user</description>
    <uri>/content/deletebadge</uri>
    <method>POST</method>
    <parameters>
        <param>
            <name>appKey</name>
            <required>yes</required>
            <default></default>
            <format>string</format>
            <examples>qiusdjsls9273sd</examples>
            <description>Your application key</description>
        </param>
        <param>
            <name>contentId</name>
            <required>yes</required>
            <default></default>
            <format>integer</format>
            <examples>1, 542</examples>
            <description>The content id</description>
        </param>
        <param>
            <name>badgeId</name>
            <required>yes</required>
            <default></default>
            <format>integer</format>
            <examples>1, 2</examples>
            <description>The badge id</description>
        </param>
    </parameters>

    <example_curl><![CDATA[
curl --request POST \
  --header "Authorization: Bearer <accessToken>" \
  --url "<host>/v1/content/deletebadge" \
  --data "contentId=1&badgeId=1&appKey=test_key"
]]></example_curl>

